<?xml version="1.0" encoding="utf-8"?>
<odoo>



    # Adults menu action
    <record id="action_hospital_adults" model="ir.actions.act_window">
        <field name="name">Adults</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('age', '&gt;' , 18)]</field>
        <!--        <field name="context">{'search_default_gender': 1, 'search_default_patient_name': 1}</field>-->
        <!--        <field name="context">{'search_default_male': 1}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Adult Patient Form
            </p>
        </field>
    </record>

    <menuitem id="hospital_adults"
              name="Adults"
              parent="menu_patient_root"
              action="action_hospital_adults"
              sequence="2"/>
</odoo>
